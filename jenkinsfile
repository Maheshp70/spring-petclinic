pipeline{
    agent { label 'MAVEN' }
    options{
        timeout(time: 30, unit: 'MINUTES')
    }
    triggers{
         cron('10 * * * *')
    }
    stages{
        stage(git){
            steps{
                git url: 'https://github.com/Maheshp70/spring-petclinic.git',
                    branch: 'dev'
            }
        }
        stage(build){
            steps{
                sh 'mvn clean package'
                
            }
            post {
                success {
                    archiveArtifacts artifacts: '**/spring-petclinic-*.jar'
                    junit testResults: '**/TEST-*.xml'

                }
                
            }

        }
    }
}
